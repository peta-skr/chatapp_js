generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @db.VarChar(36)
  name String @unique @db.VarChar(32)
  password String @db.VarChar(64)
  chats Chat[]
  join_channel User_Join_Channel[]
}

model Chat {
  id String @id @db.VarChar(36)
  user User @relation(fields: [user_name], references: [name])
  user_name String @db.VarChar(32)
  channel Channel @relation(fields: [channel_id], references: [id])
  channel_id String @db.VarChar(36)
  text String
  create_date DateTime @default(now())
}

model Channel {
  id String @id @db.VarChar(36)
  channel_name String @db.VarChar(64)
  chats Chat[]
  join_user User_Join_Channel[]
}

model User_Join_Channel {
  channel Channel @relation(fields: [channel_id], references: [id])
  channel_id String @db.VarChar(36)
  user User @relation(fields: [user_id], references: [id])
  user_id String  @db.VarChar(36)

  @@unique(fields: [channel_id, user_id])
}